{
  "name": "@ofocus/cli",
  "version": "0.0.1",
  "description": "OmniFocus CLI - Command-line interface for OmniFocus",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ofocus-cli": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --testPathPattern=unit"
  },
  "keywords": [
    "omnifocus",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mnorth/ofocus.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/mnorth/ofocus/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/mnorth/ofocus/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@ofocus/sdk": "workspace:*",
    "commander": "^14.0.3"
  }
}
